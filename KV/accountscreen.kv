<AccountScreen>:
	BoxLayout:
		orientation: 'vertical'
		MDToolbar:
			pos_hint:{'top':1, 'right':1}
			elevation:10
			title: 'Cafe Nalla'
			left_action_items:[['menu', lambda x: app.root.ids.nav_drawer.set_state('toggle')]]
			right_action_items:[['cart', lambda x: app.checkout()]]
			md_bg_color:app.theme_cls.primary_color

		GridLayout:
			pos_hint:{"top":1, "right":1}
			size_hint:1, 0.1
			cols:1
			id: warning
			canvas.before:
				Color:
					rgb: app.theme_cls.primary_color
				Rectangle:
					size: self.size
					pos: self.pos

			MDLabel:
				text:"Account"
				font_size: "25sp"

		FloatLayout:
			pos_hint:{'top':0.9, 'right':1}
			size_hint:1,0.85
			hidden:True
			id: load_floatie
			#canvas.before:
				#Color:
					#rgba: app.theme_cls.primary_color
				#Rectangle:
					#size: self.size
					#pos: self.pos


			ScrollView:
				# Scroll for accout
				pos_hint:{'top':1, 'left':1}
				size_hint: 1,0.85
				id: account_scroll

				GridLayout:
					# Orders
					cols:1
					size_hint_y:None
					height: self.minimum_height
					row_default_height:'50dp'
					#row_force_default: True
					id: account_banner

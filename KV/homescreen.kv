<HomeScreen>:
	BoxLayout:
		orientation: 'vertical'
		MDToolbar:
			pos_hint:{'top':1, 'right':1}
			elevation:10
			title: 'Cafe Nalla'
			left_action_items:[['menu', lambda x: app.root.ids.nav_drawer.set_state('toggle')]]
			right_action_items:[['cart', lambda x: app.change_screen('login_screen')]] #app.checkout()
			md_bg_color:app.theme_cls.primary_color

		FloatLayout:
			# Get your regular cup Button
			pos_hint:{'top':1, 'left':1}
			size_hint:1, 1
			id:home_float

			#MDRaisedButton
			MDRectangleFlatButton:
				pos_hint:{'top':1, 'right':1.1}
				size_hint:1.2, 0.1
				text: "Get your regular"

			ScrollView:
				# Scroll for menu and specials

				pos_hint:{'top':0.9, 'left':1}
				size_hint: 1,0.85

				GridLayout:
					# Menu cards
					cols:1
					size_hint_y:None
					height: self.minimum_height
					row_default_height:'200dp'
					row_force_default: True
					id: menu

			MDFillRoundFlatButton:
				pos_hint:{'top':0.075, 'right':0.95}
				size_hint: 0.9, 0.05
				icon: 'cart'
				text: 'Orderlist'
				on_press:
					app.checkout()
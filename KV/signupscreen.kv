<SignUpScreen>:
	BoxLayout:
		orientation: 'vertical'
		MDToolbar:
			pos_hint:{"top": 1, "right":1}
			elevation:10
			title:"Cafe Nalla"
			md_bg_color:app.theme_cls.primary_color
			
		FloatLayout:
			GridLayout:
				pos_hint:{"top":0.95, "right":1}
				size_hint:1, 0.1
				cols:1
				id: warning

				Label:
					text:"Sign up"
					font_size: "25sp"
					pos_hint:{"top":1, "right":1}

			GridLayout:
				rows:1
				pos_hint:{"top":0.85, "left":1}
				size_hint: 1, 0.005
				canvas.before:
					Color:
						rgb: app.theme_cls.primary_color
					Rectangle:
						size: self.size
						pos: self.pos

			FloatLayout:
				pos_hint:{"top":0.84, "right":0.95}
				size_hint: 0.9, 0.59

				# User name floatlayout
				FloatLayout:
					size_hint: 1, 0.2
					pos_hint:{"top": 1, "right":1}

					MDTextFieldRound:
					    icon_left: 'account-details'
						pos_hint:{"top":0.75, "right":0.875}
						size_hint: 0.75, 0.5
						hint_text:"First name"
						multiline: False
						id: first_name

				# Surname float layout
				FloatLayout:
					size_hint: 1, 0.2
					pos_hint:{"top":0.8, "right":1}

					MDTextFieldRound:
					    icon_left: 'account-details'
						pos_hint:{"top":0.75, "right":0.875}
						size_hint: 0.75, 0.5
						hint_text:"Last name"
						multiline: False
						id: last_name

				# Email float layout
				FloatLayout:
					size_hint: 1, 0.2
					pos_hint:{"top":0.6, "right":1}

					MDTextFieldRound:
					    icon_left: 'email'
						pos_hint:{"top":0.75, "right":0.875}
						size_hint: 0.75, 0.5
						hint_text:"Email"
						multiline: False
						id: email

				# Password float layout
				FloatLayout:
					size_hint: 1, 0.2
					pos_hint:{"top":0.4, "right":1}

					MDTextFieldRound:
					    icon_left: 'key-variant'
						pos_hint:{"top":0.75, "right":0.75}
						size_hint: 0.65, 0.5
						hint_text:"Password"
						password: True
						multiline: False
						id: password

					MDIconButton:
						id: hide_password
						icon:'eye-off'
						pos_hint:{"top":0.75, "right":1}
						size_hint:0.25, 0.5

				# float layout for our buttons
				FloatLayout:
					size_hint: 1, 0.2
					pos_hint:{"top":0.2, "right":1}

					FloatLayout:
						pos_hint:{"top":1, "right":1}
						size_hint:0.5, 1

						MDRoundFlatIconButton:
							icon:'page-next'
							pos_hint:{"top":0.75, "right":0.95}
							size_hint: 0.9, 0.5
							text:"Submit"
							id: submit

					FloatLayout:
						pos_hint:{"top":1, "right":0.5}
						size_hint:0.5, 1

						MDRoundFlatIconButton:
						    icon:'login'
							pos_hint:{"top":0.75, "right":0.95}
							size_hint: 0.9, 0.5
							text:"Login"
							id: login
							on_press:
								app.change_screen("login_screen")
							
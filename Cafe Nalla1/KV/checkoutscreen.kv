<CheckoutScreen>:
	BoxLayout:
		orientation: 'vertical'
		MDToolbar:
			pos_hint:{'top':1, 'right':1}
			elevation:10
			title: 'Cafe Nalla'
			left_action_items:[['menu', lambda x: app.root.ids.nav_drawer.set_state('toggle')]]
			right_action_items:[['home', lambda x: app.go_home()]]
			md_bg_color:app.theme_cls.primary_color

		BoxLayout:
			# Order name and price
			pos_hint:{'top':1, 'left':1}
			size_hint:1, 0.1
			orientation:'horizontal'
			canvas.before:
				Color:
					rgb: app.theme_cls.primary_color
				Rectangle:
					size: self.size
					pos: self.pos

			GridLayout:
				size_hint_x:0.85
				cols:1
				MDLabel:
					text: 'Total: '
					font_size: "18sp"
			GridLayout:
				size_hint_x:0.15
				cols:1
				MDLabel:
					id:total_cost
					font_size: "18sp"

		ScrollView:
			# Scroll for Orders

			pos_hint:{'top':0.9, 'left':1}
			size_hint: 1,0.85

			GridLayout:
				# Orders
				cols:1
				size_hint_y:None
				height: self.minimum_height
				row_default_height:'250dp'
				#row_force_default: True
				id: orders

		MDFillRoundFlatButton:
			pos_hint:{'top':0.075, 'right':0.95}
			size_hint: 0.9, 0.05
			icon: 'send'
			text: 'Send Order!'
			on_press:
				app.send_order()